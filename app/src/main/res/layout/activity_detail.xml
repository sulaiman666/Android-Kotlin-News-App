<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/foto_news_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/headline_news_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto_news_detail"
        android:background="#9500BCD4"
        android:gravity="center"
        android:text="@string/judul_berita"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>
    
    <WebView
        android:id="@+id/detail_news"
        android:layout_marginTop="10dp"
        android:layout_below="@id/headline_news_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>